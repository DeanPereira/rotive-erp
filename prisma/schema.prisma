generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Oficina {
  id        String   @id @default(uuid())
  nome      String
  createdAt DateTime @default(now())

  usuarios  Usuario[]
}

model Usuario {
  id          String   @id @default(uuid())
  nome        String
  email       String   @unique
  senha       String
  role        Role     @default(USER)
  oficinaId   String
  createdAt   DateTime @default(now())

  oficina     Oficina  @relation(fields: [oficinaId], references: [id])
}

enum Role {
  USER
  ADMIN
  GERENTE
  MECANICO
}
